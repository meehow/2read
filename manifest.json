{
    "manifest_version": 2,
    "name": "2read",
    "version": "1.3",
    "homepage_url": "https://2read.tk/",
    "description": "Convert article in current tab to readable form and upload it to IPFS.",
    "icons": {
        "48": "icon.png"
    },
    "permissions": [
        "activeTab",
        "<all_urls>",
        "bookmarks"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "2read"
    },
    "background": {
        "scripts": [
            "browser-polyfill.js",
            "background.js"
        ]
    }
}